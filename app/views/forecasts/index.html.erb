<h1>Forecasts</h1>

<%= form_tag "/forecasts", method: :get do %>
  City: <input type="text" name="city">
  <br />
  State: <input type="text" name="state">
  <br />
  <input type="submit" value="Get Weather!">
<% end %>

<h2>Location: 
  <%= @forecast_location["city"] %>, 
  <%= @forecast_location["region"] %>
</h2>


<h3>Current conditions:</h3>
<p>Date: <%= @current_conditions["date"] %></p>
<p>Temperature: <%= @current_conditions["temp"] %></p>
<p>Description: <%= @current_conditions["text"] %></p>


<h3>5-day Forecast:</h3>

<% @five_day_forecast[0..5].each do |day| %>

  <h4>Date: <%= day["date"] %> </h4>
  <p>High: <%= day["high"] %> </p>
  <p>Low: <%= day["low"] %> </p>
  <p>Description: <%= day["text"] %> </p>

<% end %>



